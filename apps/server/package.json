{
  "name": "@kado/server",
  "private": true,
  "version": "1.0.0",
  "main": "src/app.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node dist/app.js",
    "build": "tsc -p .",
    "dev": "cross-env NODE_ENV=development nodemon --exec node --experimental-specifier-resolution=node --loader ts-node/esm ./src/app.ts",
    "test": "tap"
  },
  "dependencies": {
    "@fastify/websocket": "^7.1.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.5",
    "emittery": "^1.0.0",
    "fastify": "^4.8.1",
    "nanoid": "^4.0.0",
    "serialize-error": "^11.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/node": "^18.8.4",
    "@types/sinon": "^10.0.13",
    "@types/tap": "^15.0.7",
    "@types/websocket": "^1.0.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sinon": "^14.0.1",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "tap": {
    "node-arg": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
